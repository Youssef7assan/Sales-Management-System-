@model List<Category>
@{
    ViewData["Title"] = "Category";
}

<h1>Category</h1>
<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
         
            <th>Name</th>
            <th>Actions</th>
            
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.CategoryName</td>
                <td>
                <a href="/Category/Delete/@item.Id" class="btn btn-danger"> Delete</a>



                <!-- زر تعديل -->
                <a href="/category/edit/@item.Id" class="btn btn-primary">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/Category/Add" class="btn btn-success"> Add Category</a>